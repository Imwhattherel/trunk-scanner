        <img id="wifi_icon" class="wifi_icon" src="/public/images/apx_color_icons/wifi.png" alt="wifi">
        <img id="ip_icon" class="ip_icon" src="/public/images/apx_color_icons/ip.png" alt="ip">
        <img id="gps_icon" class="gps_icon" src="/public/images/apx_color_icons/gps.png" alt="ip">

