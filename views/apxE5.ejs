<!DOCTYPE html>
<html lang="en">
<head>
    <title>APX E5</title>
    <link rel="stylesheet" href="/public/css/e5.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.2/socket.io.js" crossorigin="anonymous"></script>

    <script src="https://code.responsivevoice.org/1.6/responsivevoice.js?key=PekkZld1"></script>
</head>
<body>
<audio id="audioPlayer" controls hidden></audio>
<audio id="soundEffectsPlayer" hidden></audio>

<% if (allowLoad) {%>
    <button id="loadCodeplugBtn">Load Codeplug</button>
<%} else {%>
    <button id="updateCodeplugBtn">Update Codeplug</button>
<%}%>

<script type="module" src="/public/js/ApxRadioApp.js"></script>
<script type="module">
    const numOfRadios = "<%=numOfRadios%>"
    const loadCodeplugBtn = document.getElementById('loadCodeplugBtn');
    const updateCodeplugBtn = document.getElementById('updateCodeplugBtn');

    import { ApxRadioApp } from '/public/js/ApxRadioApp.js';

    const defaultCodeplug = '<%-JSON.stringify(defaultCodeplug).replace(/</g, '\\u003c')%>';
    const allowLoad = "<%-allowLoad%>";

    let apxRadioApp = new ApxRadioApp("APX8500", defaultCodeplug, allowLoad);
    let powerState = false;

    if (loadCodeplugBtn) {
        loadCodeplugBtn.addEventListener('click', async () => {
            await apxRadioApp.loadCodeplugJson();
        });
    }

    if (updateCodeplugBtn) {
        updateCodeplugBtn.addEventListener('click', async () => {
            await apxRadioApp.updateCodeplugJson();
        });
    }

    document.getElementById('radioPowerBtn').addEventListener('click', async () => {
        if (powerState) {
            await apxRadioApp.stop();
            powerState = false;
        } else {
            await apxRadioApp.start();
            if (!apxRadioApp.isstarted) {
                console.log('Radio app failed to start');
            } else {
                console.log('Radio app started');
            }
            powerState = true;
        }
    });
</script>

<div style="text-align: center;">
    <div class="container">
        <img class="image" src="/public/images/e5.png" alt="radio">

        <img id="rssi_icon" class="rssi_icon" src="/public/images/apx_color_icons/rssi/black/rssi_4.webp" alt="rssi">
